@model BooksEcommerce.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h2>Create Category</h2>

<form asp-controller="Category" asp-action="Create" method="post" id="categoryForm">
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary" id="CreateBtn">Create</button>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("categoryForm").addEventListener("submit", function (event) {
            var btn = document.getElementById("CreateBtn");

            if (btn.disabled) {
                event.preventDefault(); // Prevent multiple form submissions
                return;
            }

            btn.disabled = true; // Disable button immediately
            btn.innerText = "Processing...";
            this.submit();
        });
    </script>
}
