@model BooksEcommerce.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>Author: @Model.Author</p>
    <p>Category: @Model.Category?.CategoryName</p>
</div>

<form asp-controller="Book" asp-action="BookDeleteConfirmed" method="post">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Book" asp-action="BookIndex" class="btn btn-secondary">Cancel</a>
</form>
