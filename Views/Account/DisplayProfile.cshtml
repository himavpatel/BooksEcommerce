@model BooksEcommerce.ViewModels.UserProfileVM
@{
    ViewData["Title"] = "Profile";
}

<h2>Profile</h2>
<hr />

<p><strong>User Name:</strong> @Model.Username</p><br />
<p><strong>Email:</strong> @Model.Email</p><br />
<p><strong>Name:</strong> @Model.Name</p><br />
<p><strong>Address:</strong> @Model.Address</p><br />

<hr />
<a asp-controller="Account" asp-action="UpdateProfile" class="btn btn-primary">Edit Profile</a>
